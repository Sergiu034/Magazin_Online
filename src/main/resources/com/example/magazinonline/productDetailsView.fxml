<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="260.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProductDetailsController">
    <Label fx:id="productNameLabel" style="-fx-font-size: 20px;" text="Nume" />
    <Label fx:id="productPriceLabel" style="-fx-font-size: 18px;" text="Pret: " />
    <Label fx:id="productCategoryLabel" style="-fx-font-size: 18px;" text="Categorie: " />
   <HBox prefHeight="26.0" prefWidth="300.0" spacing="20.0">
      <children>
          <Button onAction="#handleAddToCart" text="Add to Cart">
            <HBox.margin>
               <Insets left="75.0" />
            </HBox.margin>
         </Button>
         <TextField fx:id="quantityText" prefHeight="26.0" prefWidth="81.0" promptText="Cantitate" text="1" />
      </children>
   </HBox>
</VBox>
