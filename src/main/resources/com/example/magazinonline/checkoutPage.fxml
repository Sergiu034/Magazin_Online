<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CheckoutPageController">
    <Label style="-fx-font-size: 20px;" text="Finalizare Comandă" />

    <!-- Nume -->
    <Label text="Nume:" />
    <TextField fx:id="nameField" promptText="Introduceți numele complet" />

    <!-- Email -->
    <Label text="Email:" />
    <TextField fx:id="emailField" promptText="Introduceți adresa de email" />

    <!-- Telefon -->
    <Label text="Telefon:" />
    <TextField fx:id="phoneField" promptText="Introduceți numărul de telefon" />

    <!-- Adresă -->
    <Label text="Adresă:" />
    <TextArea fx:id="addressField" promptText="Introduceți adresa de livrare" />

    <!-- Total comandă -->
    <Label text="Total Comandă:" />
    <Label fx:id="totalLabel" style="-fx-font-size: 16px;" />

    <!-- Buton Trimite comanda -->
    <Button onAction="#handleSubmitOrder" text="Trimite comanda">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
</VBox>
