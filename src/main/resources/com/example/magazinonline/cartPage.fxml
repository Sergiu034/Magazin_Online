<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.CartPageController">
    <TableView fx:id="cartTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="columnIndex" text="No." />
            <TableColumn fx:id="columnName" text="Nume Produs" />
            <TableColumn fx:id="columnQuantity" text="Cantitate" />
            <TableColumn fx:id="columnPrice" text="Pret" />
            <TableColumn fx:id="columnTotal" text="Total" />
            <TableColumn fx:id="columnDelete" text="Sterge" />
        </columns>
    </TableView>

    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleCheckout" text="Checkout" textAlignment="CENTER">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" left="270.0" />
      </VBox.margin></Button>
</VBox>
